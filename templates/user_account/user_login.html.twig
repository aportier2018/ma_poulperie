{% extends 'baseJeuUser.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

    <div class="container jeu">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h2>Connectez-vous !</h2>
                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue dans l'email ou/et le mot de passe !</div>
                    {% endif %}
                    <form action="{{ path('user_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" value="{{ userEmail }}" class="form-control" placeholder="example@example.fr" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" placeholder="mot de passe" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion</button>
                        </div>   
                    </form>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
